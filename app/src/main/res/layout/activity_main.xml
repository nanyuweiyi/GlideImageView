<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image14"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image21"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:riv_pressed_mask_color="@color/transparent20" />

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image22"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:riv_border_color="@color/blue"
                    app:riv_border_width="2dp"
                    app:riv_corner_radius="10dp"
                    app:riv_is_circle="false"
                    app:riv_pressed_border_color="@color/red"
                    app:riv_pressed_border_width="4dp"
                    app:riv_pressed_mask_color="@color/transparent20"
                    app:riv_pressed_mode_enabled="true" />

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image23"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:riv_border_color="@color/yellow"
                    app:riv_border_width="2dp"
                    app:riv_is_circle="true"
                    app:riv_pressed_border_color="@color/yellow"
                    app:riv_pressed_border_width="2dp"
                    app:riv_pressed_mask_color="@color/placeholder_yellow" />

                <com.demo.glideimage.GlideImageView
                    android:id="@+id/image24"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:riv_border_color="@color/orange"
                    app:riv_border_width="2dp"
                    app:riv_is_circle="true"
                    app:riv_pressed_border_color="@color/orange"
                    app:riv_pressed_border_width="2dp"
                    app:riv_pressed_mask_color="@color/placeholder_orange"
                    app:riv_pressed_mode_enabled="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image32"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/left_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintDimensionRatio="16:9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/right_image">

                    <com.demo.glideimage.GlideImageView
                        android:id="@+id/image41"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.demo.glideimage.progress.CircleProgressView
                        android:id="@+id/progressView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:progress="0"
                        app:cpv_innerPadding="2dp"
                        app:cpv_outerColor="@color/transparent90_white"
                        app:cpv_outerSize="1dp"
                        app:cpv_progressNormalColor="@color/transparent"
                        app:cpv_progressReachColor="@color/transparent90_white"
                        app:cpv_progressStyle="FillInnerArc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/right_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintDimensionRatio="16:9"
                    app:layout_constraintLeft_toRightOf="@+id/left_image"
                    app:layout_constraintRight_toRightOf="parent">

                    <com.demo.glideimage.GlideImageView
                        android:id="@+id/image42"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.demo.glideimage.progress.CircleProgressView
                        android:id="@+id/progressView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:progress="0"
                        app:cpv_innerPadding="2dp"
                        app:cpv_outerColor="@color/transparent90_white"
                        app:cpv_outerSize="1dp"
                        app:cpv_progressNormalColor="@color/transparent"
                        app:cpv_progressReachColor="@color/transparent90_white"
                        app:cpv_progressStyle="FillInnerArc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <com.demo.glideimageview.widget.DraggableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/draggableView1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="RecycleView"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/draggableView2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="NineImageView"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.demo.glideimageview.widget.DraggableFrameLayout>
</FrameLayout>